<div class="container">
  <h1>Your Profile </h1>
  <div class="col-md-3">
    <div class="">
      <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
    </div>
    <hr>
    <div class="row">
      <!-- left column -->
      </div>
      <form class="form-horizontal" role="form">
        <div class="form-group" id="profile-form">
          <label class="col-lg-12 control-label">First Name: </label>
          <div class="col-lg-8">
            <%= current_user.first_name %>
          </div>
        </div>
        <div class="form-group" id="profile-form">
          <label class="col-lg-12 control-label">Last Name: </label>
          <div class="col-lg-8">
            <%= current_user.last_name %>
          </div>
        </div>
        <div class="form-group" id="profile-form">
          <label class="col-lg-12 control-label">Email: </label>
          <div class="col-md-8">
            <%= current_user.email%>
          </div>
        </div>
        <div class="form-group" id="profile-form">
          <label class="col-lg-12 control-label">Location: </label>
          <div class="col-lg-8">
           <%= current_user.location  %>
         </div>
       </div>
       <div class="form-group" id="profile-form">
        <label class="col-lg-12 control-label">Phone number: </label>
        <div class="col-lg-8">
         <%= current_user.phone_number %>
       </div>
     </div>
     <div class="form-group">
      <label class="col-md-8 control-label"></label>
      <div class="col-md-8">
        <%= link_to "Edit Profile", edit_user_registration_path(@current_user), class: "btn btn-success" %>
      </div>
    </div>
  </form>
</div>
</div>
</div>
<hr>
