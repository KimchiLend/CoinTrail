<div class="container">
  <h1>Edit Profile <%= resource_name.to_s.humanize %> </h1>
  <hr>
  <div class="row">
    <!-- left column -->
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="col-md-3">
      <div class="text-center">
        <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
        <h6>Upload a different photo...</h6>

        <input type="file" class="form-control">
      </div>
    </div>
    <!-- edit form column -->
<!--       <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a>
          <i class="fa fa-coffee"></i>
          This is an <strong>.alert</strong>. Use this to show important messages to the user.
        </div> -->
        <h3>Personal info</h3>

        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label"></label>
            <div class="col-lg-8">
              <%= f.input :first_name, required: true, html: { class: "form-control", placeholder: "Jane"} %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label"></label>
            <div class="col-lg-8">
              <%= f.input :last_name, required: true, html: { class: "form-control", placeholder: "Doe"}  %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label"></label>
            <div class="col-lg-8">
              <!-- <input class="form-control" type="text" value="janesemail@gmail.com"> -->
              <%= f.input :email, required: true, autofocus: true, html: { class: "form-control", placeholder: "janedoe@gmail.com"} %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
             <%= f.input :phone_number, html: { class: "form-control"} %>
           </div>
         </div>

         <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
           <%= f.input :location, html: { class: "form-control"}  %>
         </div>
       </div>
       <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
       <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
       <% end %>
       <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-8">
         <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, html: { class: "form-control"} %>
       </div>
     </div>
     <div class="form-group">
      <label class="col-md-3 control-label"></label>
      <div class="col-md-8">
        <%= f.input :password_confirmation, autocomplete: "off", required: false, html: { class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label"></label>
      <div class="col-md-8">
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, html: { class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label"></label>
      <div class="col-md-8">
        <%= f.button :submit, "Update" %>
        <% end %>
        <span></span>
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
    </div>
  </form>
</div>
</div>
</div>
<hr>

<%#= link_to "Back", :back %>
